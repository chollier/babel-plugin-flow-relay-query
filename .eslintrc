{
  "extends": ["airbnb"],
  "parser": "babel-eslint",

  "plugins": [
    "flow-vars"
  ],

  "env": {
    "node": true,
    "mocha": true
  },

  "ecmaFeatures": {
    "restParams": true
  },

  "rules": {
    "quotes": [2, "double"], // single quotes are for characters
    "curly": [2, "all"], // curly brackets for all statements
    "comma-dangle": [2, "never"], // no trailing commas
    "id-length": 0, // name your variables whatever you want

    "no-unused-vars": [2, { "varsIgnorePattern": "^_$" }],

    "react/no-multi-comp": 0,
    "react/prop-types": 0, // handled by Flow
    "react/sort-comp": 0, // dont care

    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,

    // extra
    "object-shorthand": 2,
    "constructor-super": 2,
    "no-this-before-super": 2
  }
}
